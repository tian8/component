.wxui-full{
    position: fixed;
	top: 0;
	right: 0;
	left: 0;
	bottom: 0;
	z-index: 1000;
   /* width:100%;
    height:100%;*/
    background:rgba(0, 0, 0, 0.6) ;
}
.wxui-full.hidden {
	visibility: hidden;
	opacity: 0;
	
}
.wxui-full.visible {
	visibility: visible;
	opacity: 1;
    transition: .2s  linear;
}
.wxui-dialog-box.hidden{
	visibility: hidden;
	opacity: 0
}
.wxui-dialog-box.visible{
	visibility: visible;
	opacity: 1;
	transition:.2 linear;
}
.wxui-dialog {
	position: fixed;
	z-index: 5000;
	width: 80%;
	max-width: 600rpx;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	background-color: #FFFFFF;
	text-align: center;
	border-radius: 5px;
	overflow: hidden;
}
.wxui-dialog-title{
	padding: 1.3em 1.6em 0.5em;
	font-weight: 400;
	font-size: 18px;
}
.wxui-dialog-content{
	padding: 0 1.6em 0.8em;
	min-height: 40px;
	font-size: 15px;
	line-height: 1.3;
	word-wrap: break-word;
	word-break: break-all;
	color: #999999;
}

.wxui-dialog-ft{
	position: relative;
	line-height: 48px;
	font-size: 18px;
	display: flex;
	
}
.wxui-dialog-ft:after {
	content:"";
	position: absolute;
	left: 0;
	top: 0;
	right: 0;
	height: 1px;
	border-top: 1px solid #D5D5D6;
	color: #D5D5D6;
	-webkit-transform: scaleY(0.5);
	transform: scaleY(0.5);
}

.wxui-dialog-btn {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	flex: 1;
	color: #3CC51F;
	text-decoration: none;
	-webkit-tap-highlight-color: rgba(0, 0, 0, 0);
	position: relative;
}

.wxui-dialog-btn:active {
	background-color: #EEEEEE;
}

.wxui-dialog-btn:after {
	content: " ";
	position: absolute;
	left: 0;
	top: 0;
	width: 1px;
	bottom: 0;
	border-left: 1px solid #D5D5D6;
	color: #D5D5D6;
	-webkit-transform: scaleX(0.5);
	transform: scaleX(0.5);
}
.wxui-dialog__btn_default {
	color: #353535;
}

.wxui-dialog__btn_primary {
	color: #0BB20C;
}
.wxui-rater {
	text-align: left;
	display: inline-block;
	line-height: normal;
}

.wxui-rater .wxui-rater-box {
	display: inline-block;
	text-align: center;
	cursor: pointer;
	color: #ccc;
	transition: color .3s ease;
}

.wxui-rater .wxui-rater-box:last-child {
	padding-right: 2px!important;
	margin-right: 0px!important;
}

.wxui-rater .wxui-rater-box.is-disabled {
	color: #ccc !important;
	cursor: not-allowed;
}

.wxui-rater-box {
	position: relative;
}
.wxui-rater-inner {
	position: relative;
	display: inline-block;
}